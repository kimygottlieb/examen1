    <% @messages.each do |message| %>
					<div class="tweet">
						<div class="content">
							<img class="avatar" src="<%= image_url(message.user + '.jpg') %>" />
							<strong class="fullname"><%= message.user %></strong>
							<span class="username">@<%= message.user %></span>

							<!-- BLACK DIAMOND: Implement the icons for when a tweet is favorited/retweeted in the upper right of the tweet. -->
							<!-- HINT: Add to what you created in Step 5 -->
							<p class="tweet-text"><%= message.message_text %></p>

							<!-- STEP 6: The tweet actions below should only show up when you hover over the tweet. Otherwise, they should be hidden. -->
							<!-- HINT: CSS ":hover" pseudo element -->
							<div class="tweet-actions">
								<ul>
									<li><span class="icon action-reply"></span> Reply</li>
									<li><span class="icon action-retweet"></span> Retweet</li>
									<li><span class="icon action-favorite"></span> Favorite</li>
									<li><span class="icon action-more"></span> More</li>
								</ul>
							</div>

							<!-- STEP 7: The Retweets/timestamp/Reply areas below should also be hidden by default. These should only expand if you click on the tweet. Use a jQuery animation to accomplish the reveal, similar to how itâ€™s done on Twitter.com -->
							<!-- HINT: jQuery ".on" eventHandler -->
							<div class="stats">
								<!-- BLACK DIAMOND: Make the timestamp below similar to how they look on Twitter (1h, 18m, 1m) and use the jQuery timeago plugin to make them automatic. -->
								<!-- HINT: Refer to timeago documentation -->
								<div class="time">
									8:04 PM - 09 Nov 15
								</div>
							</div>
							<div class="reply">
								<img class="avatar" src="img/<%= message.user %>" />
								<textarea class="tweet-compose" placeholder="Reply to @<%= message.user %>"/></textarea>
							</div>
						</div>
					</div><!-- .tweet -->
<% end %>
